{
  "manifest_version": 3,
  "name": "WLO - Wir lernen online",
  "version": "1.0.8",
  "description": "Browser Extension für die Services von WLO. Bei WLO handelt es sich einerseits um eine Suchmaschine, als auch um eine Community für freie Bildungsmaterialien (OER).",
  "homepage_url": "https://wirlernenonline.de/",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "notifications"
  ],
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/content-extractor.js",
        "scripts/content.js"
      ],
      "css": ["styles/info.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "html/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "html/info.html",
        "html/home.html",
        "scripts/web-component/*",
        "styles/web-component/styles.css",
        "styles/iframe.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}